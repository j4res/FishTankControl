<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FishTankControl.Views.NuevoAcuarioPage"
             Title="Nuevo Acuario">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Guardar" Clicked="Guardar_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Nombre de Acuario" FontSize="Medium" />
            <Entry Text="{Binding Acuario.Text}" FontSize="Small" />
            <Label Text="Descripción del Acuario" FontSize="Medium" />
            <Editor Text="{Binding Acuario.Description}" FontSize="Small" Margin="0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>