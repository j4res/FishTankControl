<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FishTankControl.Views.BuscarPecesPage"
             Title="Buscar Peces">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Género" FontSize="Medium" />
            <Entry Text="{Binding Pez.Genero}" FontSize="Small" />
            <Label Text="Especie" FontSize="Medium" />
            <Editor Text="{Binding Pez.Especie}" FontSize="Small" Margin="0" />
            <Button x:Name="BotonBuscar" Text="Buscar" Clicked="BotonBuscar_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>