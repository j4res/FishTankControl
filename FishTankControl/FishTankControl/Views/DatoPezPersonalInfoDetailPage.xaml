<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FishTankControl.Views.DatoPezPersonalInfoDetailPage"
             Title="Detalle del Dato">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Editar" Clicked="Editar_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="{Binding DatoPezPersonal.Nombre}" FontSize="Medium"/>
            <Label Text="{Binding DatoPezPersonal.Descripcion}" FontSize="Small"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>